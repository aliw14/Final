@model Qida;
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img style="width:250px;height:200px;" src="~/images/@Model.ImageUrl" alt="courses-details">
                    </div>
                    <br>
                    <br>

                    <div class="course-details-content">
                        <h3>@Model.Description</h3>
                        <br>
                        <br>
                        <div class="course-details-left">
                            <a asp-controller="qida" asp-action="index" class="btn btn-success justify-content-center text-center ">Go To Back</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

