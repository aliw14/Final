@using AlMarket.MVC.ViewModels;
@{
    KaryeraViewModel viewModel = Model;

    var karyeras = viewModel.Karyeras;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/bootstrap.css">
    <link rel="stylesheet" href="~/css/karyera.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/bizkimik.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <title>Document</title>
</head>

<body>
    @await Component.InvokeAsync("Header")

    <section class="section-background karyera-section">
        <div class="background-image"></div>
        <div class="container">
            <div class="karyera-main">
                <div class="heading-body d-flex flex-wrap flex-column flex-lg-row align-items-start">
                    <div class="partner-text-main">
                        <p class="heading mb-3">
                            Karyera
                        </p>
                        <p class="text">
                            Minlərlə əməkdaşı ilə günü-gündən böyüyən ailənizin marketi - “Al Market” mağazalar
                            şəbəkəsinə karyerasını “Al Market” -də qurmaq istəyən, yaşı 18-dən yuxarı şəxsləri
                            komandamıza dəvət edir.
                        </p>
                    </div>
                    <div class="karyera-buttons d-flex align-items-center flex-column flex-md-row justify-content-center ms-lg-auto">
                        <div class="aos-init aos-animate">
                            <a asp-controller="online" asp-action="index" class="btn btn-muracat d-flex flex-column align-items-center justify-content-center me-md-4 mb-4 mb-md-0 aos-init aos-animate">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="38" class="svg replaced-svg">
                                    <path fill="#f50023"
                                          d="M22 26h8v-6l10 9-10 9v-6h-8zM36 0a4 4 0 0 1 4 4v17.38A12 12 0 0 0 18 28a11.6 11.6 0 0 0 .7 4H4a4 4 0 0 1-4-4V4a4 4 0 0 1 4-4zm0 4L20 14 4 4v4l16 10L36 8z" />
                                </svg>
                                <h2>Online müraciət</h2>
                                <p>Ümumi müraciət</p>
                            </a>
                        </div>
                        <div class="aos-init aos-animate">
                            <a class="btn btn-muracat d-flex flex-column align-items-center justify-content-center me-md-4 mb-4 mb-md-0 aos-init aos-animate"
                               href="/almarket-cv (1).pdf">
                                <img src="/images/karyera2.svg" alt="">
                                <h2>CV yüklə</h2>
                                <p>Məlumatlarınızı göndərin</p>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="vakansiya-main mb-5">
                    <h1 class="text-center">
                        Vakansiya
                    </h1>
                    <div class="karyera-search mb-5">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul id="searchedWork" class="list-unstyled py-3">
                                    <li class="d-flex py-3">
                                        <input id="input-search" class="form-control karyera-search-input js-shuffle-search" type="text"
                                               placeholder="Axtarış">
                                    </li>
                                </ul>

                            </div>
                            <div class="col-lg-4">
                                <div class="dropdown partner-dropdown">
                                    <button style="margin-top:30px;" id="dropdown-btn"
                                            class="btn btn-partner d-flex align-items-center justify-content-center">
                                        <span>Bütün kateqoriyalar</span>
                                        <i id="chevron" class="fa-solid fa-chevron-down"></i>
                                    </button>
                                    <ul id="target"
                                        style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate3d(0px, -62px, 0px);"
                                        class="dropdown-menu js-down p-4 filter-options">
                                        <li>
                                            Hamısı
                                        </li>
                                        <li>
                                            Satıcı-kassir
                                        </li>
                                        <li>
                                            Fəhlə(Qaradağ,Sumqayıt və Dərnəgül depoları)
                                        </li>
                                        <li>
                                            Mağaza müdir-müavini
                                        </li>
                                    </ul>
                                </div>

                            </div>
                            <div class="col-lg-2">
                                <button style="margin-top:30px;" class="btn btn-search d-flex align-items-center justify-content-center">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    @*
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5 shuffle"
                             style="position: relative; overflow: hidden; height: 288px; transition: height 250ms cubic-bezier(0.4, 0, 0.2, 1) 0s;">
                            @foreach (var karyer in karyeras)
                            {
                                <div class="col card-items widget shuffle-item shuffle-item--visible">
                                    <a asp-controller="karyera" asp-action="details" asp-route-id="@karyer.Id" class="vakansiya-card card-anime">
                                        <p class="kasir card-items__title"> @karyer.Heading</p>
                                        <p class="text">
                                            @karyer.Description
                                        </p>
                                        <span class="d-flex align-items-center arrows">
                                            Ətraflı
                                            <i class="fa-solid fa-arrow-right"></i>
                                        </span>
                                    </a>
                                </div>
                            }


                        </div>
                    *@
                    <partial name="_KaryeraPartial" model="@karyeras"></partial>

                </div>

            </div>
        </div>
    </section>
    <script asp-append-version="true" src="~/js/karyera.js"></script>
</body>
